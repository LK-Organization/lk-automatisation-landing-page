---
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8" aria-label="Navigation principale">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center" aria-label="Accueil Lukasz Kulig">
          <img 
            src="https://lukaskulig.fr/wp-content/uploads/2025/04/Frame-3-1.svg" 
            alt="Logo Lukasz Kulig consultant automatisation IA" 
            title="Lukasz Kulig - Expert automatisation et intelligence artificielle"
            class="h-10 w-auto"
            width="120"
            height="40"
          />
        </a>
      </div>

      <!-- CTA Button -->
      <div>
        <a 
          href="/contact" 
          class="bg-primary hover:bg-primary-dark text-white px-6 py-2 rounded-lg text-sm font-semibold transition-colors"
          aria-label="Prendre rendez-vous gratuit pour automatisation IA"
        >
          RDV Gratuit
        </a>
      </div>
    </div>
  </nav>
</header>